<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App02_TipoPaginaXF.TipoPagina.Navigation.Pagina1"
             Title="Título da Navigation" Padding="5">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Pesquisar" IconImageSource="1.png"/>
        <ToolbarItem Text="Ordenar" IconImageSource="2.png"/>
        <ToolbarItem Text="Detalhes" IconImageSource="3.png"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Eu sou uma ContentPage"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Ir para a página 2" Clicked="MudarParaPagina2"/>
            <Button Text="Chamar o Modal" Clicked="ChamarModal"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>